#include <iostream>
using namespace std;
int main ()
{
	int x,sum;
	
	
	bool condition = false;
	
	while (!condition){
		cout << "Enter a number: "; cin >>x;
		for(int y = 1; y <= x; y++){
		sum += y;
	

	}
	
		if (x <= 0)
		condition = true;
		else if (x>0)
	cout<< sum<<endl;
	sum = 0;
	}
	
	
	return 0;
}
